@media (max-width: 760px){

	/* Columns */

	body .columns {
		width: 100%;
		padding-bottom: 100px;
	}

	body .price {
		padding-bottom: 10px;
	}


	/* Wrapper */

	#wrapper {
		overflow: hidden;
		min-height: 1000px;
		padding: 0px 0px 20px 0px;
		background: #FFFFFF;
	}
	
	/* Header */

	#header {
		background: url('<%= asset_path("img01.png") %>') repeat;
	}

	#logo h1 a {
		letter-spacing: -2px;
    text-align: center;
    text-decoration: none;
    text-transform: lowercase;
    font-family: 'Petit Formal Script', cursive;
    font-size: 40pt;
    font-weight: 300;
    color: #000000;
    padding-left: 40%;
	}

	#menu {
	  background: url('<%= asset_path("img01.png") %>') repeat top left;
	  left: -285px;
	  height: 100%;
	  position: fixed;
	  width: 285px;
	}  

	.icon-close {
  cursor: pointer;
  padding-left: 10px;
  padding-top: 10px;
}

.icon-menu {
  cursor: pointer;
  padding-bottom: 10px;
  padding-left: 10px;
  padding-top: 10px;
  text-decoration: none;
  text-transform: uppercase;
}

.icon-menu, 
.mobileUI-site-name {
	float: left;
}

.logo-header p {
	display: none;
}

.mobileUI-site-name {
	text-align: center;
}

#mobileUI-site-wrapper {
	position: relative;
  z-index: 100;
  top: 44px;
  width: 100%;
  overflow: auto;
}
	
	#mobileUI-site-titlebar {
		//= depend_on_asset "img01.png"
		background: url('<%= asset_path("img01.png") %>') repeat;
		border-bottom: 1px solid #CFCFCF;
	}
	
	#mobileUI-site-title {
		position: fixed;
    z-index: 151;
    top: 0px;
    width: 100%;
    overflow: hidden;
    height: 44px;
    line-height: 44px;
    -webkit-user-select: none;
		display: block;
		letter-spacing: -1px;
		text-align: center;
		text-decoration: none;
		text-transform: lowercase;
		font-family: 'Petit Formal Script', cursive;
		font-size: 16pt;
		font-weight: 200;
		color: #2A2A2A;
	}
	
	#mobileUI-site-nav-opener {
		width: 15px;
		height: 15px;
		//= depend_on_asset "img04.png"
		background: url('<%= asset_path("img04.png") %>') no-repeat left top;
		top: 15px;
		left: 10px;
		text-indent: -999999em;
		position: absolute;
    z-index: 152;
    cursor: pointer;
    -webkit-user-select: none;
	}
	
	#mobileUI-site-nav-opener:active {
	}
	
	
	#mobileUI-site-nav nav .nav_link {
		padding: 10px 0px 10px 20px;
		background: /*url('<%= asset_path("img08.png") %>')*/ repeat-x left bottom;
		text-decoration: none;
		text-transform: uppercase;
		font-family: 'Oswald', sans-serif;
		font-size: 13pt;
		font-weight: 200;
		color: #2A2A2A;
	}
	
	/* Banner */
	
	#banner {
		overflow: hidden;
		margin: 30px 20px 30px 20px;
		box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, .3);
	}
	
	#banner .banner-border {
		padding: 10px;
		background: #FFFFFF;
	}
	
	#banner a img {
		display: block;
		width: 100%;
	}
	
	/* Page Wrapper */
	
	.homepage #page {
		
		padding: 0px 0px 30px 0px;
	}
	
	#page {
		overflow: hidden;
		padding: 50px 0px 30px 0px;
	}
	
	/* Content */
	
	#content {
		padding: 0px 0px 0px 0px;
	}
	
	#content h2 {
		padding: 0px 0px 5px 0px;
		letter-spacing: -1px;
		text-transform: uppercase;
		font-size: 20pt;
		color: #2A2A2A;
	}
	
	#content .subtitle {
		padding: 0px 0px 20px 0px;
		line-height: 120%;
		text-transform: uppercase;
		font-family: 'Oswald', sans-serif;
		font-size: 12pt;
		font-weight: 300;
		color: #D1551F;
	}
	
	#content img {
		padding: 0px 0px 10px 0px;
	}
	
	#content a img {
		display: block;
		width: 100%;
	}
	
	#content .post {
		padding: 0px 0px 40px 0px;
	}
	
	#content section {
		padding: 0px 30px;
	}
	
	/* Sidebar1 */
	
	#sidebar1 {
		padding: 0px 0px 0px 0px;
	}
	
	#sidebar1 h2 {
		padding: 0px 0px 30px 0px;
		text-transform: uppercase;
		font-size: 20pt;
		color: #2A2A2A;
	}
	
	#sidebar1 img {
	}
	
	#sidebar1 a img {
		display: block;
		width: 100%;
	}
	
	#sidebar1 section {
		padding: 0px 30px;
	}
	
	/* Sidebar2 */
	
	#sidebar2 {
		padding: 0px 0px 0px 0px;
	}
	
	#sidebar2 h2 {
		padding: 0px 0px 30px 0px;
		text-transform: uppercase;
		font-size: 20pt;
		color: #2A2A2A;
	}
	
	#sidebar2 section {
		padding: 0px 30px;
	}
	
	#sidebar2 .sbox1 {
		margin-bottom: 50px;
	}
	
	#sidebar2 .sbox2 {
		margin-bottom: 50px;
	}
	
	#sidebar2 .sbox3 {
	}
	
	/** Footer Column Content */
	
	#footer-content {
		overflow: hidden;
		padding: 50px 0px 0px 0px;
	}
	
	#footer-content h2 {
		padding: 0px 0px 0px 0px;
		text-transform: uppercase;
		font-size: 20pt;
		color: #616161;
	}
	
	#footer-content section {
		padding: 0px 30px 10px 30px;
	}
	
	#footer-content #box1 {
	}
	
	#footer-content #box2 {
	}
	
	#footer-content #box2 .border-img {
		margin-bottom: 20px;
		padding: 10px;
		background: #FFFFFF;
	}
	
	#footer-content #box2 img {
	}
	
	#footer-content #box2 a img {
		display: block;
		width: 100%;
	}
	
	#footer-content #box3 {
		overflow: hidden;
	}

	.hiddendiv {
		display: none;
	}
}
